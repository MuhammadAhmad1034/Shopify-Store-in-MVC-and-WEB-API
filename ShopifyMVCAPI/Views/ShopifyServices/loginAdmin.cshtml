@model ShopifyMVCAPI.Models.Authentication.Admin

<h4 style="text-align:center;">Admin Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="loginAdmin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="adminEmail" class="control-label"></label>
                <input asp-for="adminEmail" class="form-control" type="email"/>
                <span asp-validation-for="adminEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="adminPassword" class="control-label"></label>
                <input asp-for="adminPassword" class="form-control" type="password" />
                <span asp-validation-for="adminPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary mt-3" style="margin-left:10px;padding:10px 150px;" />
            </div>
        </form>
    </div>
    
</div>

<div>
    <a asp-action="addNewAdmin">Didn't have an account?</a>
</div>


